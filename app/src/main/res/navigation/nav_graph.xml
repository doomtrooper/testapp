<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:startDestination="@id/root"
            android:id="@+id/nav_graph">
    <fragment
            android:id="@+id/root"
            android:name="com.anandp.application.news.NewsListFragment"
            android:label="Root"
            tools:layout="@layout/news_list_fragment">
        <action
            android:id="@+id/news_to_details"
            app:destination="@+id/details" />

    </fragment>
    <fragment
            android:id="@+id/details"
            android:name="com.anandp.application.newsdetails.NewsDetailsFragment"
            android:label="News Details"
            tools:layout="@layout/fragment_news_details" />
</navigation>